<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BullChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#B5B5B5</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@android:color/background_light</item>
        <item name="colorPrimaryDark">#B5B5B5</item>
    </style>

    <color name="backgroundColor">@color/white</color>
    <color name="textColor">#757575</color>
    <color name="bottomColor">@color/brown</color>
    <color name="normalColor">#1E1E1E</color>
    <color name="floatingColor">@color/white</color>
    <color name="rippleColor">@color/brown</color>
</resources>