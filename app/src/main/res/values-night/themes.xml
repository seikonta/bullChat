<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BullChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <color name="backgroundColor">@color/black</color>
    <color name="textColor">@color/white</color>
    <color name="bottomColor">@color/gray</color>
    <color name="normalColor">#424242</color>
    <color name="floatingColor">@color/gray</color>
    <color name="rippleColor">@color/white</color>
</resources>